<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bkg"
    tools:context=".game.screens.SinglePlayer">

    <ImageView
        android:layout_width="654dp"
        android:layout_height="137dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="79dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_shape"
        android:alpha="0.5"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/drop_card_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/drop_card"
                android:contentDescription="@string/app_name"
                android:background="@drawable/back_card"
                android:layout_width="90dp"
                android:layout_height="145dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_card_container"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard1"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard2"
                android:layout_marginStart="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard3"
                android:layout_marginStart="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard4"
                android:layout_marginStart="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard5"
                android:layout_marginStart="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard6"
                android:layout_marginStart="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

            <ImageView
                android:contentDescription="@string/player_cards"
                android:id="@+id/pcard7"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_width="90dp"
                android:layout_height="145dp"
                android:background="@drawable/back_card" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="172dp" />

</androidx.constraintlayout.widget.ConstraintLayout>